<div class="row col-3">
  <div class="order p-3">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://picsum.photos/100/120/?random" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{book.title}}</h5>
        <p class="card-text">{{book.author}}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{book.owner}}</li>
        <li class="list-group-item">{{book.owner_email}}</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">Card link</a>
      </div>
    </div>
  </div>
</div>
